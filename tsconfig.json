{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": [
    "./examples",
    "./scripts",
    "./dist",
    "./tests",
    "./website",
    "./gulpfile.ts",
    "./package.json"
  ]
}
